# ALB Idle Timeout Configuration for Streaming Support
# This extends the load balancer idle timeout from default 60s to 120s
# to support long-running SSE (Server-Sent Events) streaming responses

option_settings:
  aws:elasticbeanstalk:environment:process:default:
    HealthCheckPath: /health
    HealthCheckInterval: 30
    HealthyThreshold: 3
    UnhealthyThreshold: 5
    Port: 80
    Protocol: HTTP
    DeregistrationDelay: 30
    MatcherHTTPCode: 200
    
  aws:elbv2:listener:default:
    Protocol: HTTP
    
  aws:elbv2:loadbalancer:
    # Extended idle timeout for streaming responses
    IdleTimeout: 120
    # Enable access logs (optional)
    AccessLogsS3Enabled: false
