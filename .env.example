# AION v1 Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/aion
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/aion?retryWrites=true&w=majority

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Search API Configuration (choose one)
# Option 1: SerpAPI
SERPAPI_KEY=your-serpapi-key-here

# Option 2: Bing Search API
BING_API_KEY=your-bing-api-key-here

# Voice/Speech Configuration (optional)
GOOGLE_TTS_KEY=your-google-tts-key-here
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_REGION=eastus

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration
DB_NAME=aion
DB_HOST=localhost
DB_PORT=27017
