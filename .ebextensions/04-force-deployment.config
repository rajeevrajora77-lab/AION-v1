# Force EB Deployment - Fix version mismatch
# Restarts EC2 instances to pull latest code

option_settings:
  aws:elasticbeanstalk:application:environment:
    FORCE_DEPLOYMENT: "true"
    DEPLOYMENT_FIX: "2026-01-12-01-00"

commands:
  01_restart_app:
    command: "sudo systemctl restart nodejs || sudo /opt/elasticbeanstalk/tasks/bundlelogs.d/nodejs.conf || true"
    ignoreErrors: true
